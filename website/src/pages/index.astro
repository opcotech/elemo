---
import Layout from "../layouts/Layout.astro";
import { Badge } from "../components/ui/badge";
---

<style>
  .bg-grid-slate-100 {
    background-image: url("data:image/svg+xml,%3csvg xmlns='http://www.w3.org/2000/svg' viewBox='0 0 32 32' width='32' height='32' fill='none' stroke='rgb(148 163 184 / 0.1)'%3e%3cpath d='m0 .5h32m-32 0v32'/%3e%3c/svg%3e");
  }

  .bg-grid-slate-700\/25 {
    background-image: url("data:image/svg+xml,%3csvg xmlns='http://www.w3.org/2000/svg' viewBox='0 0 32 32' width='32' height='32' fill='none' stroke='rgb(51 65 85 / 0.25)'%3e%3cpath d='m0 .5h32m-32 0v32'/%3e%3c/svg%3e");
  }
</style>

<Layout>
  <main class="min-h-screen animate-slide-up bg-gradient-to-br from-background via-background to-muted/20 flex relative flex-col">
    <div class="absolute inset-0 bg-grid-slate-100 [mask-image:linear-gradient(0deg,white,rgba(255,255,255,0.6))] data-[theme=dark]:bg-grid-slate-700/25 pointer-events-none" />

    <section class="flex-1 flex items-center justify-center">
      <div class="relative mx-auto max-w-7xl px-4 sm:px-6 lg:px-8 py-20">
        <div class="text-center">
          <div class="mb-8">
            <Badge variant="outline">
              ‚ú® Open Source Project Management
            </Badge>
          </div>

          <h1 class="text-4xl sm:text-5xl lg:text-6xl font-bold tracking-tight text-foreground mb-6">
            Elemo
          </h1>

          <p class="text-xl sm:text-2xl lg:text-3xl font-medium text-muted-foreground mb-8 max-w-3xl mx-auto leading-relaxed [animation-delay:0.1s]">
            Modern, project management platform built for teams that
            care about quality
          </p>

          <div class="flex flex-col sm:flex-row gap-4 justify-center items-center [animation-delay:0.3s]">
            <a 
              href="https://github.com/opcotech/elemo"
              class="inline-flex items-center justify-center gap-2 whitespace-nowrap text-sm font-medium transition-all duration-200 cursor-pointer bg-primary text-primary-foreground hover:bg-primary/90 focus-visible:ring focus-visible:ring-ring focus-visible:ring-offset-2 h-10 rounded-sm px-6 has-[>svg]:px-4"
            >
              <svg class="size-5" fill="currentColor" viewBox="0 0 24 24">
                <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z" />
              </svg>
              Star on GitHub
            </a>

            <a 
              href="https://github.com/opcotech/elemo/issues"
              class="inline-flex items-center justify-center gap-2 whitespace-nowrap text-sm font-medium transition-all duration-200 cursor-pointer border border-border bg-background text-foreground hover:border-primary hover:text-primary focus-visible:ring focus-visible:ring-ring hover:bg-background h-10 rounded-sm px-6 has-[>svg]:px-4"
            >
              <span class="size-5">üöÄ</span>
              Start Contributing
            </a>
          </div>
        </div>
      </div>
    </section>

    <footer class="py-12 relative">
      <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
        <div class="text-center">
          <p class="text-muted-foreground">
            Built with ‚ù§Ô∏è by Opcotech developers and the open source community
          </p>
          <div class="mt-4 flex justify-center space-x-6">
            <a href="https://github.com/opcotech/elemo" class="text-muted-foreground hover:text-primary transition-all hover:underline hover:underline-offset-4 focus:outline-none focus:ring-2 focus:ring-primary focus:ring-offset-2 focus:ring-offset-background rounded">
              GitHub
            </a>
            <a href="https://discord.gg/sx9FPyXAdP" class="text-muted-foreground hover:text-primary transition-all hover:underline hover:underline-offset-4 focus:outline-none focus:ring-2 focus:ring-primary focus:ring-offset-2 focus:ring-offset-background rounded">
              Discord
            </a>
            <a href="https://join.slack.com/t/elemo-workspace/shared_invite/zt-3a6w9jb46-4uGjtkcqBN9BqBD50xl8eA" class="text-muted-foreground hover:text-primary transition-all hover:underline hover:underline-offset-4 focus:outline-none focus:ring-2 focus:ring-primary focus:ring-offset-2 focus:ring-offset-background rounded">
              Slack
            </a>
          </div>
        </div>
      </div>
    </footer>
  </main>
</Layout>
